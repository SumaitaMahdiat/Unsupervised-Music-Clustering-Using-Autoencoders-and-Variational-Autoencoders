import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.decomposition import PCA
from sklearn.manifold import TSNE

sns.set(style="whitegrid")

audio_train = pd.read_csv("data/features/train_audio.csv")
audio_valid = pd.read_csv("data/features/valid_audio.csv")
audio_test = pd.read_csv("data/features/test_audio.csv")
audio_train['split'] = 'train'
audio_valid['split'] = 'valid'
audio_test['split'] = 'test'
audio_df = pd.concat([audio_train, audio_valid, audio_test], ignore_index=True)
print(f"Audio shape: {audio_df.shape}")

lyrics_train = pd.read_csv("data/features/train_lyrics.csv")
lyrics_valid = pd.read_csv("data/features/valid_lyrics.csv")
lyrics_test = pd.read_csv("data/features/test_lyrics.csv")
lyrics_train['split'] = 'train'
lyrics_valid['split'] = 'valid'
lyrics_test['split'] = 'test'
lyrics_df = pd.concat([lyrics_train, lyrics_valid, lyrics_test], ignore_index=True)
print(f"Lyrics shape: {lyrics_df.shape}")

genres_train = pd.read_csv("data/features/hard/train_genre.csv")
genres_valid = pd.read_csv("data/features/hard/valid_genre.csv")
genres_test = pd.read_csv("data/features/hard/test_genre.csv")
genres_train['split'] = 'train'
genres_valid['split'] = 'valid'
genres_test['split'] = 'test'
genres_df = pd.concat([genres_train, genres_valid, genres_test], ignore_index=True)
print(f"Genres shape: {genres_df.shape}")

print("\nAudio preview:")
display(audio_df.head())
print("Missing values in audio:\n", audio_df.isnull().sum())

print("\nLyrics preview:")
display(lyrics_df.head())
print("Missing values in lyrics:\n", lyrics_df.isnull().sum())

print("\nGenres preview:")
display(genres_df.head())
print("Missing values in genres:\n", genres_df.isnull().sum())

if 'duration' in audio_df.columns:
    plt.figure(figsize=(8,4))
    sns.histplot(audio_df['duration'], bins=30, kde=True)
    plt.title("Audio Duration Distribution")
    plt.xlabel("Seconds")
    plt.show()

num_audio_cols = audio_df.select_dtypes(include=np.number).columns.tolist()
if len(num_audio_cols) > 1:
    plt.figure(figsize=(10,8))
    sns.heatmap(audio_df[num_audio_cols].corr(), annot=True, fmt=".2f", cmap="coolwarm")
    plt.title("Audio Feature Correlation")
    plt.show()

lyrics_df['num_words'] = lyrics_df['cleaned_lyrics'].apply(lambda x: len(str(x).split()))
plt.figure(figsize=(8,4))
sns.histplot(lyrics_df['num_words'], bins=30, kde=True)
plt.title("Lyrics Word Count Distribution")
plt.xlabel("Number of Words")
plt.show()

plt.figure(figsize=(8,4))
sns.countplot(x='genre', data=genres_df)
plt.title("Genre Distribution")
plt.xticks(rotation=45)
plt.show()

merged_df = audio_df.merge(lyrics_df, on='song_id', how='inner', suffixes=('_audio','_lyrics'))
merged_df = merged_df.merge(genres_df, on='song_id', how='inner')
print(f"Merged dataframe shape: {merged_df.shape}")
display(merged_df.head())

if 'duration' in merged_df.columns and 'num_words' in merged_df.columns:
    corr = merged_df.corr()['duration']['num_words']
    print(f"Correlation between audio duration and lyrics word count: {corr:.3f}")

try:
    embed_train = pd.read_csv("data/features/hard/train_lyrics_emb.csv")
    embed_valid = pd.read_csv("data/features/hard/valid_lyrics_emb.csv")
    embed_test = pd.read_csv("data/features/hard/test_lyrics_emb.csv")
    embed_train['split'] = 'train'
    embed_valid['split'] = 'valid'
    embed_test['split'] = 'test'
    embeddings_df = pd.concat([embed_train, embed_valid, embed_test], ignore_index=True)
    print(f"Embeddings shape: {embeddings_df.shape}")

    # Drop non-numerical columns
    embeddings_data = embeddings_df.drop(['song_id','split'], axis=1, errors='ignore')

    pca = PCA(n_components=2)
    pca_result = pca.fit_transform(embeddings_data)
    print(f"PCA explained variance ratio: {pca.explained_variance_ratio_}")

    plt.figure(figsize=(8,6))
    plt.scatter(pca_result[:,0], pca_result[:,1], alpha=0.6)
    plt.title("PCA of Lyrics Embeddings")
    plt.xlabel("PC1")
    plt.ylabel("PC2")
    plt.show()

    tsne = TSNE(n_components=2, random_state=42, perplexity=30)
    tsne_result = tsne.fit_transform(embeddings_data)

    plt.figure(figsize=(8,6))
    plt.scatter(tsne_result[:,0], tsne_result[:,1], alpha=0.6)
    plt.title("t-SNE of Lyrics Embeddings")
    plt.xlabel("Dim1")
    plt.ylabel("Dim2")
    plt.show()

except FileNotFoundError:
    print("No embeddings CSV found, skipping embedding visualization.")
